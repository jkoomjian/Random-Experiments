<html>
<head>

<script src="jquery-1.7.1.min.js" type="text/javascript"></script>

<style type="text/css">
body 
{
    margin:0 auto;
    text-align:center;
}

#mainContent 
{
    width:800px;
    margin:0 auto;
    text-align:left;
}

#logoLoginNav
{
        margin-top:25px;
        height:119px;
}

#logo 
{
    width:110px;

    float:left;
}

#login 
{
    width:60px;
    float:right;
    text-align:right;
}

#login a 
{
    text-decoration:none;
}

#nav 
{
    width:500px;
    float:right;
    position:relative;
    top:76px;   
}

.navLink
{
    float:left;
    width:100px;
    text-align:center;
}

#fbFeatured
{
    width:620px;
	padding:10px;
	position:relative;
	z-index:0;
	top:93px; 
	margin-left:120px;
}

#fbfriends
{
    width:280px;
    text-align:center;
    float:left;
   
}

#featuredEvents
{
    width:280px;
    text-align:center;
    float:left;
}

#legal
{
    text-align:right;
    position:relative;
    top:200px;
    width:800px;
    float:right;
    font-size:8pt;
}

</style>

<script>
    $("#friendCustomMessage").live("keyup",function () {
        $("#customMsgTxt").html($("#friendCustomMessage").val());
    });
</script>

</head>

<body>
    <div id="mainContent">
        <div id="logoLoginNav">
            <div id="logo"><img src="/assets/thumbnail.jpg" alt="Our Logo" width="100px"/></div>
            <div id="login"><a href="#"> Login In</a></div>
            <div id="nav">
                <div class="navLink">Home</div> 
                <div class="navLink">Tour</div>
                <div class="navLink">About Us</div> 
                <div class="navLink">Blog</div>
            </div>
        </div>
		
        <div style="text-align:center;">
		<%= form_for :invitefriends, :url => { :action => "sendinvite" }, :html => {:style => "width:424px;margin:0 auto;text-align:center;"} do |f| %>
            <div style="text-align:center;">
                <h2>Invite Your Friends</h2>
            </div>
            <div>
                <div style="text-align:left;">Email Addresses: (one email per line)</div>
                <div><%= f.text_area :friendEmails, :size => "50x6" %></textarea></div>
            </div>
            <div>
            <br />
                Preview Message:
                <div style="border:1px dotted grey;text-align:left;">
                    <p>Frank (email@address.com) has invited you to join him at this event.</p>
                    <p>
                        <b>Event Details:</b> <br /><br />
                        Title: Title <br />
                        Location: Location <br />
                        Date/Time: Date/Time <br />
                    </p>
                    <p>
                        <b>Frank's Message:</b>
                        <div id="customMsgTxt"></div>
                    </p>
                    <p>
                        <a href="#">Click here</a> to see more details and to join Frank at this event!
                    </p>
                    <p>
                        Enjoy! <br />
                        Count Me In!
                    </p>
                </div>
            </div>
            <div>
                <br />
                <div style="text-align:left;">Custom Message:</div>
                <div><%= f.text_area :customMessage, :size => "50x6" %></div>
            </div>
            <div style="text-align:right;">
                <div><%= f.submit "Send Invitations" %></div>
            </div>
        <% end %>
		</div>
        <div id="legal">About Us | Privacy Policy | Terms & Conditions | &copy; Our Company, Inc 2012 - All rights reserved</div>
    
    </div>


</body>

</html>