<%= f.cms_text_field :name, :label => 'Lesson Name' %>

<div class="fields file_fields">
  <label for="">Current Display Image</label>
  <img src="<%= @block.display_image_url %>" style="margin: 0; position: static;"/>
</div>

<%= f.cms_file_field :image, :label => "Change Display Image" %>
<%= f.cms_text_field :slug, :label => 'URL Slug', :instructions => 'Leave blank to automatically generate' %>
<%= f.cms_text_field :est_duration, :instructions => 'ex. 20-30 minutes, under 10 minutes' %>
<%= f.cms_text_field :suggested_age_display, :instructions => 'ex. 2-4, under 1, 4+' %>
<%= f.cms_text_field :suggested_age_min, :instructions => 'used for the search page. enter min age' %>
<%= f.cms_text_field :suggested_age_max, :instructions => 'used for the search page. enter max age' %>
<%= f.cms_text_field :prep_time, :instructions => 'ex. none, under 10 minutes, 10-15 minutes' %>
<%= f.cms_text_field :lesson_focus, :instructions => 'geography, history, etc' %>
<%= f.cms_text_field :location, :instructions => 'yard, play room, playground, etc' %>
<%= f.cms_text_field :num_children, :label => 'Number of Children', :instructions => 'ex. 2-4, under 3' %>
<%= f.cms_text_editor :summary, :label => 'Lesson Summary', :instructions => '(optional) This summary will be displayed on the homepage if this lesson is selected as a featured lesson' %>
<%= f.cms_text_editor :objective %>
<%= f.cms_text_editor :milestone %>
<%= f.cms_text_editor :materials %>
<%= f.cms_text_editor :lesson_prep %>
<%= f.cms_text_editor :lesson_plan %>
<%= f.cms_text_area :video, :instructions => 'Copy the embed code from youtube and paste it here.' %>
<%= f.cms_check_box :is_free, :instructions => "Check if this lesson is a free sample lesson, uncheck if it requires a membership?"  %>
<%= f.cms_drop_down :category_id, categories_for('Lesson').map{|c| [c.path, c.id]}, :include_blank => true %>
<%= f.cms_tag_list :instructions => 'Space seperated list (ex. tag1 tag2 tag3)' %>