#ui-datepicker-div {
    background: #FFF url(<%= asset_path "cms/content_bg.gif" %>) repeat-x -25px 0px;
    border: 5px solid #888;
    width: 150px;
    padding: 10px 10px 0 10px;
    z-index: 100;
}

#ui-datepicker-div table {
    border: 1px solid #EEE;
    padding: 3px;
    margin-top: 5px;
}

#ui-datepicker-control, #ui-datepicker-links {
    border: 1px solid #000;
}

.ui-datepicker-header select {

}

.ui-datepicker-clear a {
    color: #FFFFFF;
}

.ui-datepicker-days-cell-over {
    cursor: pointer;
}

.ui-datepicker th {
    border: 0 none;
    padding: 0.7em 0.3em;
    text-align: center;
    font-weight: bold;
    color: #333;
}

.ui-datepicker td span, .ui-datepicker td a {
    display: block;
    padding: 5px;
    text-align: right;
    text-decoration: none;
}


td.ui-datepicker-days-cell-over {
    background: #EEE;
}

td.ui-datepicker-current-day {
    background: #CADCF4;
}

.ui-datepicker-close {
    margin: 2px 0 0 135px;
}

button.ui-datepicker-close {
    cursor: pointer;
    width: 16px;
    overflow: hidden;
    padding: 16px 0 0 0;
    background: url(<%= asset_path "cms/datepicker/close.gif" %>) no-repeat 4px 2px;
}

.ui-datepicker-prev, .ui-datepicker-next, .ui-datepicker-current {
    display: none;
}

.ui-datepicker-header {
    clear: left;
}

.ui-datepicker-month {
    margin-right: 15px;
    width: 75px;
}

.ui-datepicker-year {
    width: 60px;
}